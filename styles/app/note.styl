.note
  font-family: 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif
  font-size: 15px
  
  input
    z-index: 2
    position: fixed
    top: 1em
    right: 1em
    font-size: 1em
    width: 300px

  textarea
    z-index: 1
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    border: 0
    resize: none
    font-size: 1.2em
    padding: 1em